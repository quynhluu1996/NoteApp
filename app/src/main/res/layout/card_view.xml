<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="0dp"
        android:layout_height="@dimen/cardview_height"
        android:layout_weight="1"
        card_view:cardCornerRadius="2dp"
        android:layout_margin="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp">

            <TextView
                android:id="@+id/cardview_note_title"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:elevation="@dimen/elevation"
                android:text="Title"
                android:textColor="#000"
                android:textSize="24sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/note_item1"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_marginBottom="2dp"
                android:layout_below="@id/cardview_note_title"
                android:elevation="@dimen/elevation"
                android:textSize="@dimen/subtitle" />

            <TextView
                android:ellipsize="end"
                android:id="@+id/note_item2"
                android:singleLine="true"
                android:layout_marginBottom="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/note_item1"
                android:elevation="@dimen/elevation"
                android:textSize="@dimen/subtitle" />

            <TextView
                android:id="@+id/note_item3"
                android:singleLine="true"
                android:layout_marginBottom="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/note_item2"
                android:elevation="@dimen/elevation"
                android:textSize="@dimen/subtitle" />

            <TextView
                android:ellipsize="end"
                android:id="@+id/note_item4"
                android:singleLine="true"
                android:layout_marginBottom="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/note_item3"
                android:elevation="@dimen/elevation"
                android:textSize="@dimen/subtitle"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>
